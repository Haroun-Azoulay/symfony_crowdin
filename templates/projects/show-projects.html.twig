{% extends 'base.html.twig' %}

{% block title %}Show Project{% endblock %}

{% block body %}
    <div class="content--wrapper">
    <a href="{{ path('app_projects') }}">
    <button class="btn">
    <span class="material-symbols-outlined">
arrow_back
</span>
</button>
</a>
        <div class="project--details">
            <div class="detail--group">
                <h2 class="project--name">{{ project.name }}</h2>
            </div>
            <div class="detail--group">
                <p class="project--label">Target Languages:</p>
                <p class="project--languages">{{ project.targetLanguages|join(', ') }}</p>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #f4f4f9 !important;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h2 {
            padding: 0px;
        }
        .content--wrapper {
            background-color: #ffffff;
            padding: 4rem;
            margin: 50px auto;
            max-width: 600px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .project--details {
            width: 100%;
        }

        .detail--group {
            margin-bottom: 1.5rem;
        }

        .project--name {
            font-size: 2rem;
            color: #2c3e50;
            font-weight: bold;
            margin-bottom: 1rem;
            text-align: center;
        }

        .project--label {
            font-size: 1.2rem;
            color: #34495e;
            font-weight: bold;
            margin-top: 5em;
            margin-bottom: 2em;
        }

        .project--languages {
            font-size: 1rem;
            color: #555;
            background-color: #f9f9f9;
            padding: 0.75rem;
            border-radius: 10px;
            border: 1px solid #ddd;
        }

        .material-symbols-outlined {
            color: #5dca88;
            font-size:3rem;
        }

         .btn {
            position:relative;
            display: block;
			width: 8rem;
			padding: 0.75rem;
			border: none;
			border-radius: 10px;
			background-color: black;
			color: white;
			font-size: 1rem;
			font-weight: 600;
			cursor: pointer;
			transition: background-color 0.3s ease;
			margin-top: -3.5em;
            margin-left: -2.5rem;
            margin-bottom:3rem;
            height:5rem;
		}

        .btn:hover {
            opacity: 0.8;
        }
    </style>
{% endblock %}
