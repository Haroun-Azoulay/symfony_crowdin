{% extends 'base.html.twig' %}

{% block title %}Show Project{% endblock %}

{% block body %}
    <div class="content--wrapper">
    <a href="{{ path('app_projects') }}">
    <button class="btn--navigation">
    <span class="material-symbols-outlined">
arrow_back
</span>
</button>
</a>
        <div class="project--details">
            <div class="detail--group">
                <h2 class="project--name">{{ project.name }}</h2>
            </div>
            <div class="detail--group">
                <p class="project--label">Target Languages:</p>
                <p class="project--languages">{{ project.targetLanguages|join(', ') }}</p>
            </div>
            {% if is_granted("SOURCE_VIEW", project) %}
            <a href="{{ path('app_projects_delete', { 'id': project.id }) }}"><button class="btn">Delete project</button></a>
             <a href="{{ path('app_projects_update', { 'id': project.id }) }}"><button class="btn">Update project</button></a>
            <a href="{{ path('app_sources_create', { 'id': project.id }) }}"><button class="btn">Add Source(s)</button></a>
        {% endif %}
        </div>
     <div class="sources--list">
            <h2>Sources</h2>
            {% for source in sources %}
                <div class="source--item">
                    <a href="{{ path('app_source_show' , { 'id': source.id }) }}">
                        <p>{{ source.content }}</p>
                        </a>
                        {% if is_granted("SOURCE_VIEW", project) %}
                        <a href="{{ path('app_source_delete', { 'id': source.id })}}"
                        <span class="material-symbols-outlined">
                        delete
                        </span>
                        {% endif %}
                        {% if is_granted("SOURCE_VIEW", project) %}
                        <a href="{{ path('app_source_update', { 'id': source.id })}}"
                        <p>update</p>
                        {% endif %}
                    </a>
                </div>
            {% else %}
                <p>No sources found for this project.</p>
            {% endfor %}
        </div>
    </div>
    </div>
{% endblock %}
{% block stylesheets %}
    <style>
        body {
            background-color: #f4f4f9 !important;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h2 {
            padding: 0px;
        }
        .content--wrapper {
            background-color: #ffffff;
            padding: 4rem;
            margin: 50px auto;
            max-width: 600px;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .project--details {
            width: 100%;
        }

        .detail--group {
            margin-bottom: 1.5rem;
        }

        .project--name {
            font-size: 2rem;
            color: #2c3e50;
            font-weight: bold;
            margin-bottom: 1rem;
            text-align: center;
        }

        .project--label {
            font-size: 1.2rem;
            color: #34495e;
            font-weight: bold;
            margin-top: 5em;
            margin-bottom: 2em;
        }

        .project--languages {
            font-size: 1rem;
            color: #555;
            background-color: #f9f9f9;
            padding: 0.75rem;
            border-radius: 10px;
            border: 1px solid #ddd;
        }

        .material-symbols-outlined {
            color: #5dca88;
            font-size:3rem;
        }

         .btn--navigation {
            position:relative;
            display: block;
			width: 8rem;
			padding: 0.75rem;
			border: none;
			border-radius: 10px;
			background-color: black;
			color: white;
			font-size: 1rem;
			font-weight: 600;
			cursor: pointer;
			transition: background-color 0.3s ease;
			margin-top: -3.5em;
            margin-left: -2.5rem;
            margin-bottom:3rem;
            height:5rem;
		}

        .btn:hover {
            opacity: 0.8;
        }

        .btn {
			width: 100%;
			padding: 0.75rem;
			border: none;
			border-radius: 10px;
			background-color: #5dca88;
			color: white;
			font-size: 1rem;
			font-weight: 600;
			cursor: pointer;
			transition: background-color 0.3s ease;
			margin-top: 1em;
		}

        .source--item {
            background-color: #ecf0f1;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 10px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .source--item:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        }

        .source--item a {
            text-decoration: none;
            color: #2c3e50;
            font-size: 1.1rem;
            font-weight: 500;
        }

        .source--item a:hover {
            text-decoration: underline;
        }

    </style>
{% endblock %}
