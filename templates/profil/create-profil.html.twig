{% extends 'base.html.twig' %}

{% block title %}Create Profile
{% endblock %}

{% block body %}
	<h1>Create my Profile</h1>
	<div class="content--wrapper">
		<div class="content--form">
			<form action="{{ path('app_profil_create') }}" method="post">
				<div class="form-group">
					<strong>
						<label for="description">Your description :</label>
					</strong>
					<textarea type="description" id="description" name="description"></textarea>
				</div>
				<div class="content--checkbox">
					<h4>Do you speak any languages and your level ?</h4>
					{% for language in ALL_LANGUAGES %}
						<div class="checkbox-group">
							<input type="checkbox" id="checkUser" class="check" name="languages[]" value="{{ language }}">
							{% if language == 'French' %}
								<span class="fi fi-fr"></span>
							{% elseif language == 'English' %}
								<span class="fi fi-gb"></span>
							{% elseif language == 'Spanish' %}
								<span class="fi fi-es"></span>
							{% elseif language == 'German' %}
								<span class="fi fi-de"></span>
							{% elseif language == 'Italian' %}
								<span class="fi fi-it"></span>
							{% elseif language == 'Darija' %}
								<span class="fi fi-dz"></span>
								<span class="fi fi-ma"></span>
							{% elseif language == 'Tamazight' %}
								<img src="{{ asset('images/tamazight_flag.svg') }}" style="width:2em" alt="Flag tamazight">
							{% endif %}
							<label for="checkUser">&nbsp;<strong>{{ language }}</strong>
							</label>
							<select name="skills[]" id="language-level-select" style="display:none;">
								<option value="beginner">Beginner</option>
								<option value="elementary">Elementary</option>
								<option value="intermediate">Intermediate</option>
								<option value="advanced">Advanced</option>
								<option value="fluent">Fluent</option>
								<option value="native">Native</option>
							</select>
						</div>
					{% endfor %}
				</div>
				<button type="submit" class="btn">Save</button>
			</form>
			<a href="{{ path('app_main_homepage') }}">
				<button class="btn btn--homepage">Back to Home</button>
			</a>

		</div>
	</div>
	<script>
		$(document).ready(function () {

$('input:checkbox').each(function () {
toggleRange($(this));
});

$('input:checkbox').change(function () {
toggleRange($(this));
});

function toggleRange(checkbox) {
if (checkbox.is(':checked')) {
checkbox.siblings('select').show();
} else {
checkbox.siblings('select').hide();
}
}

$('input[type="range"]').on('input', function () {
var rangeValue = $(this).val();
$(this).siblings('.count').text(rangeValue);
});
});
	</script>
{% endblock %}

