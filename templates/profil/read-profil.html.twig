{% extends 'base.html.twig' %}

{% block title %}My Profile
{% endblock %}

{% block body %}
	<h1>My Profil</h1>

	<div class="content--wrapper">
		<div class="profile-details">
			<p>
				<strong>Description :</strong>
				<br>
				{{ profil.description }}</p>

			<p>
				<strong>Languages you speak :</strong>
			</p>
			<ul>
    {% for index, language in profil.languages %}
        <li>
            {% if language == 'french' %}
                <span class="fi fi-fr"></span>
            {% elseif language == 'english' %}
                <span class="fi fi-gb"></span>
            {% elseif language == 'spanish' %}
                <span class="fi fi-es"></span>
            {% elseif language == 'german' %}
                <span class="fi fi-de"></span>
            {% elseif language == 'italian' %}
                <span class="fi fi-it"></span>
            {% elseif language == 'darija' %}
                <span class="fi fi-dz"></span><span class="fi fi-ma"></span>
            {% elseif language == 'tamazight' %}
                <img src="{{ asset('images/tamazight_flag.svg') }}" style="width:1em" alt="Flag tamazight">
            {% endif %}
            <strong>{{ language|capitalize }}</strong> {{ profil.skills[index] }}
        </li>
    {% endfor %}
</ul>


		</div>

		<a href="{{ path('app_profil_update', { 'id': profil.id }) }}">
			<button class="btn btn-secondary">Edit Profile</button>
		</a>

		<a href="{{ path('app_main_homepage') }}">
			<button class="btn btn--homepage">Back to Home</button>
		</a>
	</div>
{% endblock %}

{% block stylesheets %}
	<style>

		body {
			font-family: 'Roboto', sans-serif;
			background-color: #f4f7f6;
			color: #333;
			margin: 0;
			padding: 0;
		}

		h1 {
			text-align: center;
			margin: 4rem;
			color: #34495e;
			font-size: 2.5rem;
			font-weight: bold;
		}

		h4 {
			color: #34495e;
			margin-bottom: 1rem;
			font-size: 20px;
			font-weight: bold;
		}

		.content--wrapper {
			background-color: #ffffff;
			padding: 2rem;
			margin: 2rem auto;
