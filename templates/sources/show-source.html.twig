{% extends 'base.html.twig' %}

{% block title %}Source Details{% endblock %}

{% block body %}

<div class="content--wrapper">
    <a href="{{ path('app_projects_show', { 'id': project.id }) }}">
        <button class="btn--navigation">
            <span class="material-symbols-outlined btn--navigation__arrow" style="font-size:3rem">
                arrow_back
            </span>
        </button>
    </a>
    <h2>{{ source.key }}</h2>
    <div class="source-content">
        <p>{{ source.content }}</p>
    </div>
    {% if form is not null %}
        {% if is_granted("TRANSLATE_EDIT", project) %}
        <div class="form-wrapper">
            {{ form_start(form) }}
            {{ form_widget(form.translatedContent, {'attr': {'class': 'form--content'}}) }}
            {{ form_widget(form.language, {'attr': {'class': 'form--radio'}}) }}
            {{ form_widget(form.save, {'attr': {'class': 'btn'}}) }}
            {{ form_end(form) }}
        </div>
        {% endif %}
    {% endif %}

    <div class="translations-list">
        <h3>Translation:</h3>
        {% for translation in translations %}
            <div class="translation-item">
                <p class="translation-language">{{ translation.language }}</p>
                <p class="translation-content">{{ translation.translatedContent }}</p>
            </div>
        {% else %}
            <p>No translations available.</p>
        {% endfor %}
    </div>
</div>

{% endblock %}

{% block stylesheets %}
<style>
    body {
        background-color: #f4f4f9 !important;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .btn--navigation__arrow {
        color: #5dca88;
    }

    .btn--navigation {
        position: relative;
        display: block;
        width: 8rem;
        padding: 0.75rem;
        border: none;
        border-radius: 10px;
        background-color: black;
        color: white;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: -3.5em;
        margin-left: -2.5rem;
        margin-bottom: 3rem;
        height: 5rem;
    }

    .content--wrapper {
        max-width: 800px;
        margin: 50px auto;
        padding: 4rem;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .content--wrapper h2 {
        font-size: 2.5rem;
        color: #34495e;
        margin-bottom: 1.5rem;
        text-align: center;
        font-weight: bold;
    }

    .source-content {
        background-color: #ecf0f1;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 2rem;
    }

    .form-wrapper {
        margin-bottom: 2rem;
    }

    input[type="radio"] {
        width:4rem;
        height:1rem;
    }

    .translations-list {
        margin-top: 2rem;
    }

    .translations-list h3 {
        font-size: 1.5rem;
        color: #2c3e50;
        margin-bottom: 1rem;
    }

    .translation-item {
        background-color: #ffffff;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .translation-language {
        font-size: 1.2rem;
        color: #3498db;
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    .translation-content {
        font-size: 1rem;
        color: #555;
    }

    .btn {
        display: block;
        width: 100%;
        padding: 0.75rem;
        border: none;
        border-radius: 8px;
        background-color: #5dca88;
        color: white;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 1rem;
        text-align: center;
        margin-top:2rem;
    }

    .form--content {
        width:100%;
        margin-bottom:3rem;
    }
    .btn:hover {
        opacity: 0.8;
    }
</style>
{% endblock %}
