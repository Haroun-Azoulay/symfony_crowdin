{% extends 'base.html.twig' %}

{% block title %}Update Translations{% endblock %}

{% block body %}

<div class="content--wrapper">
    <a href="{{ path('app_source_show', { 'id': source.id }) }}">
        <button class="btn--navigation">
            <span class="material-symbols-outlined btn--navigation__arrow" style="font-size:3rem">
                arrow_back
            </span>
        </button>
    </a>
    <h2>{{ source.key }}</h2>
    <div class="source-content">
        <p class="textarea--content">{{ source.content }}</p>
    </div>
    <div class="form-wrapper">
        {{ form_start(form) }}
        {{ form_widget(form.translatedContent, {'attr': {'class': 'form--content'}}) }}

        <div class="language-options">
            {% for language in form.language %}
                <label class="language-label">
                    {{ form_widget(language) }}
                    {% set languageLabel = language.vars.label %}
                    {% if languageLabel == 'French' %}
                        <span class="fi fi-fr"></span> French
                    {% elseif languageLabel == 'English' %}
                        <span class="fi fi-gb"></span> English
                    {% elseif languageLabel == 'Spanish' %}
                        <span class="fi fi-es"></span> Spanish
                    {% elseif languageLabel == 'German' %}
                        <span class="fi fi-de"></span> German
                    {% elseif languageLabel == 'Italian' %}
                        <span class="fi fi-it"></span> Italian
                    {% elseif languageLabel == 'Darija' %}
                        <span class="fi fi-dz"></span>
                        <span class="fi fi-ma"></span> Darija
                    {% elseif languageLabel == 'Tamazight' %}
                        <img src="{{ asset('images/tamazight_flag.svg') }}" style="width:1.5em" alt="Flag tamazight"> Tamazight
                    {% endif %}
                </label>
            {% endfor %}
        </div>

        {{ form_widget(form.save, {'attr': {'class': 'btn'}}) }}
        {{ form_end(form) }}
    </div>
</div>

{% endblock %}



{% block stylesheets %}
	<style>
		body {
			background-color: #f4f4f9 !important;
			color: #333;
			margin: 0;
			padding: 0;
		}

		.language-options {
			display: flex;
			flex-wrap: wrap;
			gap: 1rem;
			margin-bottom: 2rem;
		}

        .translate--item {
            display:flex;
            justify-content: space-between;
        }
		.translations--label {
			font-size: 1.2rem !important;
			color: #34495e;
			font-weight: bold;
			margin-top: 3em;
		}

		.language-label {
			display: flex;
			align-items: center;
			gap: 0.5rem;
			font-size: 1rem;
			color: #333;
			cursor: pointer;
		}

		.language-label input[type="radio"] {
			margin: 0;
		}
		.btn--navigation__arrow {
			color: #5dca88;
		}

		.btn--navigation {
			position: relative;
			display: block;
			width: 8rem;
			padding: 0.75rem;
			border: none;
			border-radius: 10px;
			background-color: black;
			color: white;
			font-size: 1rem;
			font-weight: 600;
			cursor: pointer;
			transition: background-color 0.3s ease;
			margin-top: -3.5em;
			margin-left: -2.5rem;
			margin-bottom: 3rem;
			height: 5rem;
		}


        .translate--item__logo--update:hover {
            color:#5dca88;
        }

        .translate--item__logo--remove:hover {
            color:red;
        }

		.content--wrapper {
			max-width: 800px;
			margin: 50px auto;
			padding: 4rem;
			background-color: #ffffff;
			border-radius: 15px;
			box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		}

		.content--wrapper h2 {
			font-size: 2.5rem;
			color: #34495e;
			margin-bottom: 1.5rem;
			text-align: center;
			font-weight: bold;
		}

		.source-content {
			background-color: #ecf0f1;
			padding: 1.5rem;
			border-radius: 8px;
			margin-bottom: 2rem;
		}

		.form-wrapper {
			margin-bottom: 2rem;
		}

		input[type="radio"] {
			width: 4rem;
			height: 1rem;
		}

		.translations-list {
			margin-top: 2rem;
		}

		p {
			margin: 0 !important;
		}

		.translations-list h3 {
			font-size: 1.5rem;
			color: #2c3e50;
			margin-bottom: 1rem;
		}

		.translation-item {
			background-color: #ffffff;
			padding: 1rem;
			border-radius: 8px;
			margin-bottom: 1rem;
			box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-top: 1rem;
		}

		.translation-language {
			font-size: 1.2rem;
			color: #5dca88;
			margin-bottom: 1rem !important;
			font-weight: bold;
		}

		.translation-content {
			font-size: 1rem;
            margin-top: 1rem;
			color: #555;
		}

		.btn {
			display: block;
			width: 100%;
			padding: 0.75rem;
			border: none;
			border-radius: 8px;
			background-color: #5dca88;
			color: white;
			font-size: 1rem;
			font-weight: 600;
			cursor: pointer;
			transition: background-color 0.3s ease;
			margin-top: 1rem;
			text-align: center;
			margin-top: 2rem;
		}

		.form--content {
			width: 100%;
			margin-bottom: 3rem;
			border-radius: 5px;
		}
		.btn:hover {
			opacity: 0.8;
		}
	</style>
{% endblock %}
